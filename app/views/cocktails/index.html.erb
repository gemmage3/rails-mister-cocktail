<html>
  <head>
    <title>RailsMisterCocktail</title>
    <meta name="csrf-param" content="authenticity_token" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" media="all" href="/assets/application.scss" />
  </head>

<body>
  <div class="banner d-flex" background-size="cover" style="background-image: url(https://images.unsplash.com/photo-1560508180-03f285f67ded?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80)">
   <div class="container">
    <h1>Affluent Cocktails</h1>
    <p>Learn how to make amazing and stylish cocktails</p>
   </div>
  </div>

  <div class="navbar navbar-expand-sm navbar-light">
      <%= link_to cocktails_path, class: "navbar-brand" do %>
      <% end %>
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to "New cocktail", new_cocktail_path(@cocktail), class: "nav-link" %>
          </li>
        </ul>
    </div>

  <div class="card-columns">
  <% @cocktails.each do |cocktail| %>
    <div class="card">
      <%= cl_image_tag cocktail.photo.key, width:364 , height: 180,  crop: :lfill, class: "card-img-top" %>
      <div class="card-body">
        <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail) %></h5>
        <p class="card-text">This content is a little bit longer.</p>
      </div>
    </div>
  <% end %>
</div>

<div class="d-flex justify-content-center">
  <%= link_to "Home", cocktails_path, class: "btn btn-flat m-4" %>
</div>

</body>

